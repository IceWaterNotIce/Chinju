.progress-bar-container {
    width: 100%;
    height: 20px;
    background-color: #333333;
    border-radius: 10px;
    margin: 10px 0;
    overflow: hidden;
}

.progress-bar {
    height: 100%;
    background-color: #00ff00;
    width: 100%; /* 預設 100%，由 C# 控制實際寬度 */
    transition: width 0.1s linear;
    border-radius: 10px;
}
